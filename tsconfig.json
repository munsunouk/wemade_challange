{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "target": "ES2020",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "include": [
        "./**/*.ts",
        "./*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}